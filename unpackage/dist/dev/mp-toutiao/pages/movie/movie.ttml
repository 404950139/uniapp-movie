<view class="page data-v-c2ea57f0"><view class="player data-v-c2ea57f0"><video class="movie data-v-c2ea57f0" src="{{trailerInfo.trailer}}" poster="{{trailerInfo.poster}}" controls id="{{trailerId}}"></video></view><view class="movie-info data-v-c2ea57f0"><image class="cover data-v-c2ea57f0" src="{{trailerInfo.cover}}" data-event-opts="{{[['tap',[['turnCover',['$event']]]]]}}" bindtap="__e"></image><view class="movie-desc data-v-c2ea57f0"><view class="title data-v-c2ea57f0">{{trailerInfo.name}}</view><view class="basic-info data-v-c2ea57f0">{{trailerInfo.basicInfo}}</view><view class="basic-info data-v-c2ea57f0">{{trailerInfo.originalName}}</view><view class="basic-info data-v-c2ea57f0">{{trailerInfo.totalTime}}</view><view class="basic-info data-v-c2ea57f0">{{trailerInfo.releaseDate}}</view><view class="score-block data-v-c2ea57f0"><view class="big-score data-v-c2ea57f0"><view class="score-words data-v-c2ea57f0">综合评分：</view><view class="movie-score data-v-c2ea57f0">{{trailerInfo.score}}</view></view><view class="score-stars data-v-c2ea57f0"><block tt:if="{{trailerInfo.score>=0}}"><block class="data-v-c2ea57f0"><stars vue-id="1" score="{{trailerInfo.score}}" showNum="{{1}}" class="data-v-c2ea57f0" bind:__l="__l"></stars></block></block><view class="prise-counts data-v-c2ea57f0">{{trailerInfo.prisedCounts+"人点赞"}}</view></view></view></view></view><view class="line-wrapper data-v-c2ea57f0"><view class="line data-v-c2ea57f0"></view></view><view class="plots-block data-v-c2ea57f0"><view class="plots-title data-v-c2ea57f0">剧情介绍</view><view class="plots-desc data-v-c2ea57f0">{{trailerInfo.plotDesc}}</view></view><view class="scroll-block data-v-c2ea57f0"><view class="plots-title data-v-c2ea57f0">演职人员</view><scroll-view class="scroll-list data-v-c2ea57f0" scroll-x><block tt:for="{{directorArray}}" tt:for-item="director" tt:for-index="StaffIndex"><view class="actor-wrapper data-v-c2ea57f0"><image class="single-actor data-v-c2ea57f0" src="{{director.photo}}" mode="aspectFill" data-staffIndex="{{StaffIndex}}" data-event-opts="{{[['tap',[['lookStaffs',['$event']]]]]}}" bindtap="__e"></image><view class="actor-name data-v-c2ea57f0">{{director.name}}</view><view class="actor-role data-v-c2ea57f0">{{director.actName}}</view></view></block><block tt:for="{{actorArray}}" tt:for-item="actor" tt:for-index="actorIndex"><view class="actor-wrapper data-v-c2ea57f0"><image class="single-actor data-v-c2ea57f0" src="{{actor.photo}}" mode="aspectFill" data-staffIndex="{{actorIndex+directorArray.length}}" data-event-opts="{{[['tap',[['lookStaffs',['$event']]]]]}}" bindtap="__e"></image><view class="actor-name data-v-c2ea57f0">{{actor.name}}</view><view class="actor-role data-v-c2ea57f0">{{actor.actName}}</view></view></block></scroll-view></view><view class="scroll-block data-v-c2ea57f0"><view class="plots-title data-v-c2ea57f0">剧照</view><scroll-view class="scroll-list data-v-c2ea57f0" scroll-x><block tt:for="{{plotPicsArray}}" tt:for-item="img" tt:for-index="imgIndex"><image class="plot-image data-v-c2ea57f0" src="{{img}}" mode="aspectFill" data-imgIndex="{{imgIndex}}" data-event-opts="{{[['tap',[['lookList',['$event']]]]]}}" bindtap="__e"></image></block></scroll-view></view></view>